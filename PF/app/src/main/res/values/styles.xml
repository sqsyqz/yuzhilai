<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="activity_main_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:drawablePadding">6.5dp</item>


    </style>

    <style name="stu_pager_lv_item03_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#2f2f2f</item>
        <item name="android:layout_below">@id/stu_pil03_iamge</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="stu_pager_lv_item03_info_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#bfbfbf</item>
        <item name="android:layout_below">@id/stu_pil03_title</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="my_pager_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="pop_text_styel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/popup_text_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    <style name="text_gray">
        <item name="android:textColor">#898989</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="title1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:paddingTop">13.3dp</item>
    </style>

    <style name="title2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">6.7dp</item>
        <item name="android:textColor">#898989</item>
    </style>

    <style name="text_right">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="pay_left">
        <item name="android:layout_marginLeft">@dimen/x33</item>
        <item name="android:layout_width">@dimen/x50</item>
        <item name="android:layout_height">@dimen/y45</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="pay_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">21.3sp</item>
        <item name="android:layout_marginLeft">@dimen/x22</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#323232</item>
    </style>

    <style name="pay_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y110</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
